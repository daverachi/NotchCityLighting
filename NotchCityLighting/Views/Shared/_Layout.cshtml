<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notch City Lighting</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Materialize/css/materialize.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Nothing+You+Could+Do' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="/" class="brand-logo"><img src="~/Content/Images/NCLlogo.png" style="height:55px; padding-right: 10px;"/>Notch City Lighting</a>
            <ul class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Lights", "Light", "Home")</li>
                <li>@Html.ActionLink("Create Light", "CreateLight", "Admin")</li>
            </ul>

            <ul id="nav-mobile" class="side-nav">
                <li>@Html.ActionLink("Lights","Light","Home")</li>
            </ul>
            <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
        @*@Html.Partial("_LoginPartial")*@
    </nav>
    <div class="body-content">
        @RenderBody()
        
    </div>
    <footer class="page-footer teal">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Company Bio</h5>
                    <p class="grey-text text-lighten-4">Bio about us making some friggin lamps in a garage</p>


                </div>
                <div class="col l3 s12"></div>
                <div class="col l3 s12">
                    <h5 class="white-text">Connect</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Link 1</a></li>
                        <li><a class="white-text" href="#!">Link 2</a></li>
                        <li><a class="white-text" href="#!">Link 3</a></li>
                        <li><a class="white-text" href="#!">Link 4</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                Made by <a class="brown-text text-lighten-3" href="http://materializecss.com">Materialize</a>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/Materialize/js/materialize.js"></script>
    <script src="~/Scripts/parallax.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
